<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.parking.app.parkingappdriver">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera" />
    <application
        android:name=".application.ParkingAppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity android:name=".view.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.UserProfileScreen"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden"

            />

        <activity
            android:name=".view.LoginScreen"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden" />

        <activity
            android:name=".appIntroduction.WelcomeScreen"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden" />

        <activity android:name=".captureImage.CapturePicture" />
        <activity android:name=".captureImage.ShowFullSnapShotOnGUI" />
        <activity android:name=".captureImage.ShowingSnapshotScreen" />

        <activity android:name=".navigationDrawer.DriverNavigationDrawerActivity" />
        <activity android:name=".drivermodel.VehicleInspectionScreen" />
        <activity android:name=".drivermodel.CustomerComments" />
        <activity android:name=".drivermodel.VehicleInspect"/>

    </application>

</manifest>
