<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dip" />

            <stroke android:width="1dip" android:color="@color/red_dark" />

            <gradient android:angle="90" android:endColor="@color/red_dark" android:startColor="@color/red_dark" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dip" />

            <stroke android:width="1dip" android:color="@color/red_dark" />

            <solid android:color="@color/red_dark" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dip" />

            <stroke android:width="1dip" android:color="@color/red_light" />

            <gradient android:angle="90" android:endColor="@color/red_light" android:startColor="@color/red_light" />
        </shape>
    </item>

</selector>